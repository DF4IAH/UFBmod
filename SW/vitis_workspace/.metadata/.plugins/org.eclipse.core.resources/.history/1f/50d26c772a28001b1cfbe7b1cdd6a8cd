#include "xil_types.h"
#include "include/srec.h"
#include "include/errors.h"

u8  grab_hex_byte (u8* buf);
u16 grab_hex_word (u8* buf);
u32 grab_hex_dword (u8* buf);
u32 grab_hex_word24 (u8* buf);

int srec_line = 0;

u8 nybble_to_val (char x)
{
    if (x >= '0' && x <= '9')
        return (u8)(x-'0');
    
    return (u8)((x-'A') + 10);
}

u8 grab_hex_byte (u8* buf)
{
    return  (u8)((nybble_to_val ((char)buf[0]) << 4) +
                  nybble_to_val ((char)buf[1]));
}

u16 grab_hex_word (u8* buf)
{
    return (u16)(((u16)grab_hex_byte (buf) << 8)
                     + grab_hex_byte ((u8*)((int)buf+2))
                     );
}

u32 grab_hex_word24 (u8* buf)
{
    return (u32)(((u32)grab_hex_byte (buf) << 16)
                     + grab_hex_word ((u8*)((int)buf+2))
                     );
}

u32 grab_hex_dword (u8* buf)
{
    return (u32)(((u32)grab_hex_word (buf) << 16)
                     + grab_hex_word ((u8*)((int)buf+4))
                     );
}

u8 decode_srec_data (u8* bufs, u8* bufd, u8 count, u8 skip)
{
    u8 cksum = 0, cbyte;
    int i;

    /* Parse remaining character pairs */
    for (i=0; i < count; i++) {
        cbyte = grab_hex_byte (bufs);
        if ((i >= skip - 1) && (i != count-1))   /* Copy over only data bytes */
            *bufd++ = cbyte;
        bufs  += 2;
        cksum += cbyte;
    }

    return cksum;
}

u8 eatup_srec_line (u8* bufs, u8 count)
{
    int i;
    u8 cksum = 0;

    for (i=0; i < count; i++) {
        cksum += grab_hex_byte(bufs);
        bufs += 2;
    }

    return cksum;
}

u8 decode_srec_line (u8* sr_buf, srec_info_t* info)
{
    u8  count;
    u8* bufs;
    u8  cksum = 0, skip;
    int type;

    bufs = sr_buf;

    srec_line++; /* for debug purposes on errors */

    if (*bufs != 'S') {
        return SREC_PARSE_ERROR;
    }
    
    type = *++bufs - '0';
    count = grab_hex_byte (++bufs);
    bufs += 2;
    cksum = count;

    switch (type)
    {
        case 0: 
            info->type = SREC_TYPE_0;
            info->dlen = count;
            cksum += eatup_srec_line (bufs, count);
            break;
        case 1: 
            info->type = SREC_TYPE_1;
            skip = 3;
            info->addr = (u8*)(u32)grab_hex_word (bufs);
            info->dlen = count - skip;
            cksum += decode_srec_data (bufs, info->sr_data, count, skip);
            break;
        case 2: 
            info->type = SREC_TYPE_2;
            skip = 4;
            info->addr = (u8*)(u32)grab_hex_word24 (bufs);
            info->dlen = count - skip;
            cksum += decode_srec_data (bufs, info->sr_data, count, skip);
            break;
        case 3: 
            info->type = SREC_TYPE_3;
            skip = 5;
            info->addr = (u8*)(u32)grab_hex_dword (bufs);
            info->dlen = count - skip;
            cksum += decode_srec_data (bufs, info->sr_data, count, skip);
            break;
        case 5:
            info->type = SREC_TYPE_5;
            info->addr = (u8*)(u32)grab_hex_word (bufs);
            cksum += eatup_srec_line (bufs, count);
            break;
        case 7:
            info->type = SREC_TYPE_7;
            info->addr = (u8*)(u32)grab_hex_dword (bufs);
            cksum += eatup_srec_line (bufs, count);
            break;
        case 8:
            info->type = SREC_TYPE_8;
            info->addr = (u8*)(u32)grab_hex_word24 (bufs);
            cksum += eatup_srec_line (bufs, count);
            break;
        case 9:
            info->type = SREC_TYPE_9;
            info->addr = (u8*)(u32)grab_hex_word (bufs);
            cksum += eatup_srec_line (bufs, count);
            break;
        default:
            return SREC_PARSE_ERROR;
    }

    if (++cksum) {
        return SREC_CKSUM_ERROR;
    }
   
    return 0;
}


